<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Challenges">

  <TextView
      android:id="@+id/Name"
      android:hint="Name"
      android:textColor="#ff52afff"
      android:textSize="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
        android:text="Challenge yourself"
        android:textSize="20dp"
        android:textColor="#ff52afff"
        android:layout_marginBottom="15pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <Button
        android:onClick="Change"
        android:id="@+id/Focus"
        android:text="Focus on work"
        android:layout_marginBottom="20dp"
        android:textColor="#283D16"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="11"
        />

    <Button

        android:onClick="Change"
        android:id="@+id/Todo"
        android:text="To do List"
        android:layout_marginBottom="20dp"
        android:textColor="#283D16"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="11"
        />


    <Button

        android:id="@+id/Healthier"
        android:text="Be healthier"
        android:layout_marginBottom="20dp"
        android:onClick="Change"
        android:textColor="#283D16"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="11"

        />
    <Button
        android:layout_marginTop="5dp"
        android:text="go to my habits"
        android:onClick="Change"
        android:id="@+id/MyList"
        android:textColor="#283D16"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="11"
        android:layout_width="160dp"
        android:layout_height="40dp" />

</LinearLayout>
